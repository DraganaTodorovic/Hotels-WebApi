    <form method="post" action="post/" id="create" style="margin: auto; width:400px">
        <h4>Dodavanje novog hotela</h4>
        <br />
        <div class="form-group">
            <label class="col-sm-6 col-form-label text-left" for="lanac" style="float:left">Lanac: </label>
            <select class="form-control col-sm-4" id="createInput4select" style="width: 200px; float: right"></select>
