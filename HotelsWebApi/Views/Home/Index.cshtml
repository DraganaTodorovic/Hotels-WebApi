        <br />
        <div class="row form-group" style="margin:auto; width:300px">
            <input id="giveUpBtn" type="button" class="btn btn-default" style="background-color:yellow; color:black" value="Odustajanje" />
            <button type="submit" class="btn btn-default" style="margin-left:60px">Dodavanje</button>

            @*<button type="submit" class="btn btn-default" style="width:120px; float:left; color:black; background-color: yellow">Izmena</button>
